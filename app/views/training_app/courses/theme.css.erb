.header{
  background-color: <%= course.color_primary %>;
}

.progress-bar__current-progress{
  background-color: <%= course.color_secondary %>;
}

.button--primary{
  background-color: <%= course.color_primary %>;
  border-color: <%= course.color_secondary %>;
}

.button--primary:hover{
  background-color: <%= course.color_secondary %>;
}

.nav-button:hover{
  border-color: <%= course.color_primary %>;
}

.nav-button:hover .nav-button__icon {
  color: <%= course.color_primary %>;
}

.nav-button:hover .nav-button__text{
  color: <%= course.color_primary %>;
}

.vjs-default-skin .vjs-control-bar{
  height: 50px;
  background-color: <%= course.color_primary %>;
}

.subnav__link:hover::before{
  border-color: transparent transparent transparent <%= course.color_primary %>;
}

.subnav__link:hover{
  color: <%= course.color_primary %>;
}

.subnav__icon:hover{
  color: <%= course.color_primary %>;
}

.subnav__item--active .subnav__link:before{
  border-color: transparent transparent transparent <%= course.color_primary %> !important;
}